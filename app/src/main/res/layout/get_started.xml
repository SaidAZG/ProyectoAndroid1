<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtrees">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="285dp"
        android:layout_height="119dp"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/roboto_bold"
        android:shadowColor="#66000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="9"
        android:text="Let's explore
        together"

        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:shadowColor="#8B0B0B0B"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="Green can begin at home"
        android:textColor="#F6F6F6"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonGetS"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:background="@drawable/roundedbutton_get"
        android:backgroundTint="#D4E7E6"
        android:fontFamily="@font/roboto_medium"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Get started"
        android:textAllCaps="false"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:shadowColor="#8B0B0B0B"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="Sign in"
        android:textColor="#F6F6F6"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetS" />

</android.support.constraint.ConstraintLayout>